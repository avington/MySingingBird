@using MySingingBird.Core.ViewModel
@model SearchResultViewModel

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<ul id="search-table-list">
    
@foreach (var item in Model.Results) {
    <li id='@string.Format("row", item.FromUserName)'>
        <div><a href="https://twitter.com/#!/@item.FromUserName" target="_blank">@item.FromUserName</a> </div>
        <div><img src="@item.FromProfileImage" alt="@item.FromUserName"/></div>
        <div>@item.Text</div>
        <a href="#" class="user-review" name='@item.FromUserName'>Review</a>|
        @Html.ActionLink("Follow", "Follow", "Profile", new { id = item.FromUserName }, null) |
    </li>
}

</ul>
